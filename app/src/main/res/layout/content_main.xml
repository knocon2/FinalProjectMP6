<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/spacexLogo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:cropToPadding="false"
            app:srcCompat="@drawable/spacex_logo" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            tools:text="UPDATE" />

        <TextView
            android:id="@+id/countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:12:58:12"
            android:textSize="40sp"
            tools:text="Countdown" />

        <TextView
            android:id="@+id/ALD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="launch_date_local: 2018-11-28T10:32:00-08:00"
            tools:text="Actual Launch Date" />

        <ImageView
            android:id="@+id/missionPatch"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/mission_patch" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Rocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rocket: Falcon 9"
                android:textSize="18sp"
                tools:text="Rocket" />

            <Button
                android:id="@+id/getRocketInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Rocket Info" />

        </LinearLayout>

        <TextView
            android:id="@+id/launchSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Site: Vandenberg Air Force Base Space Launch Complex 4E"
            tools:text="Launch Site" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SpaceX's nineteenth flight of 2018 will fly SSO-A: SmallSat Express out of Vandenberg SLC-4E for Spaceflight. SSO-A is a rideshare to sun synchronus low earth orbit consisting of 74 individual microsatellites and cubesats. It is also likely to be the third flight of core B1046 which previously flew Bangabandhu-1 and Merah Putih. If this happens it will be the first time a Falcon 9 has flown more than two missions. This is expected to be a RTLS landing."
            tools:text="Description" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>